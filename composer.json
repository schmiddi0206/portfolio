{
    "name":        "becklyn/symfony-edition",
    "description": "This is a fork of the Symfony standard edition, that automatically adds typical configuration settings as used by Becklyn.",
    "keywords":    ["symfony"],
    "license":     "BSD-3-Clause",
    "type":        "project",
    "autoload": {
        "psr-0": { "": "src/", "BecklynSymfony": "app/" }
    },
    "require": {
        "php": "^7.0.7",
        "symfony/symfony": "^3.2.2",
        "doctrine/orm": "^2.5.6",
        "doctrine/doctrine-bundle": "^1.6.7",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "symfony/swiftmailer-bundle": "^2.4.2",
        "symfony/monolog-bundle": "^3.0.3",
        "sensio/distribution-bundle": "^5.0.18",
        "sensio/framework-extra-bundle": "^3.0.19",
        "incenteev/composer-parameter-handler": "^2.1.2",
        "doctrine/doctrine-migrations-bundle": "^1.2.1",
        "ocramius/proxy-manager": "^2.0",
        "becklyn/symfony-base": "^1.0",
        "becklyn/rad-bundle": "^4.0.0-beta.4",
        "becklyn/gluggi-bundle": "^2.2"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.1.2"
    },
    "scripts": {
        "post-root-package-install": [
            "BecklynSymfony\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
